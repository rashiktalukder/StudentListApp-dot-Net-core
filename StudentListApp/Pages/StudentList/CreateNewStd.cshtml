@page
@model StudentListApp.Pages.StudentList.CreateNewStdModel

<br />
<h2 class="text-info">Insert A New Student</h2>

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="form-group row">
        <div class="col-3">
            <label asp-for="student.Name"></label>
        </div>
        <div class="col-6">
            <input asp-for="student.Name" class="form-control" />
        </div>
        <span asp-validation-for="student.Name" class="text-danger"></span>
        </div>
           
        <div class="form-group row">
        <div class="col-3">
            <label asp-for="student.Batch"></label>
        </div>
        <div class="col-6">
            <input asp-for="student.Batch" class="form-control" />
        </div>
        <span asp-validation-for="student.Batch" class="text-danger"></span>
        </div>

        <div class="form-group row">
        <div class="col-3">
            <label asp-for="student.Email"></label>
        </div>
        <div class="col-6">
            <input asp-for="student.Email" class="form-control" />
        </div>
        <span asp-validation-for="student.Email" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class=col-3>
                <input type="submit" value="Insert" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="IndexStudentList" class="btn btn-success form-control">View List</a>
            </div>
        </div>
    </form>
</div>

